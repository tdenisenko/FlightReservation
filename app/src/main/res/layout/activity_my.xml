<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:background="@drawable/images"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deparutre_editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/departure_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Departure"
        android:id="@+id/departure_textView"
        android:layout_alignBottom="@+id/deparutre_editText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Arrival"
        android:id="@+id/arrival_textView"
        android:layout_toStartOf="@+id/deparutre_editText"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/departure_textView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrival_editText"
        android:layout_toEndOf="@+id/arrival_textView"
        android:layout_alignBottom="@+id/arrival_textView"
        android:layout_alignEnd="@+id/deparutre_editText" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direct Flight"
        android:id="@+id/directFlight_checkBox"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/arrival_editText"
        android:layout_alignEnd="@+id/arrival_editText"
        android:checked="false"
        android:layout_toEndOf="@+id/arrival_textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/directFlight_checkBox"
        android:layout_marginTop="29dp"
        android:layout_alignEnd="@+id/directFlight_checkBox"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Departure Date"
        android:id="@+id/textView"
        android:layout_toStartOf="@+id/directFlight_checkBox"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editText2"
        android:layout_above="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Arrival Date"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Passengers"
        android:id="@+id/passenger_textView3"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_toEndOf="@+id/passenger_textView3"
        android:layout_alignTop="@+id/passenger_textView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cabin Class"
        android:id="@+id/cabin_textView"
        android:layout_below="@+id/spinner"
        android:layout_toStartOf="@+id/editText3" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignBottom="@+id/cabin_textView"
        android:layout_alignStart="@+id/spinner" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_below="@+id/spinner2"
        android:layout_alignEnd="@+id/spinner2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Search"
        android:id="@+id/search_textView"
        android:layout_toStartOf="@+id/searchView"
        android:layout_alignWithParentIfMissing="false"
        android:editable="false"
        android:padding="10dp"
        android:layout_alignBottom="@+id/searchView"
        android:layout_alignEnd="@+id/searchView"
        android:layout_marginRight="30dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One Way"
        android:id="@+id/oneWay"
        android:layout_toStartOf="@+id/searchView"
        android:layout_toEndOf="@+id/textView2"
        android:checked="false"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/directFlight_checkBox"
        android:layout_alignStart="@+id/directFlight_checkBox" />

</RelativeLayout>